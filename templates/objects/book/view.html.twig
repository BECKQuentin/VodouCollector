{% extends "base.html.twig" %}


{% block body %}

    <div class="content_box">
        <h2>Ouvrage</h2>

        <hr>

        <div class="d-flex align-items-center my-3">
            {% if is_granted('ROLE_ADMIN') %}
                <div class="d-flex justify-content-end mx-2">
                    <a class="btn btn-vodou" href="{{ path('edit_book', {id:book.id}) }}" title="Editer">
                        <i class="fa-solid fa-pen"></i>
                    </a>
                </div>
            {% endif %}
            <h4>{{ book.title }}</h4>
        </div>

        <div class="px-4">

            <div class="ul my-3">
                <h5>Bibliographie</h5>
                {% for library in book.libraries %}
                    <li>{{ library.title }}</li>
                {% endfor %}
            </div>

            <hr>

            <div class="d-flex align-items-center">
                <em>Auteur :&nbsp;</em>
                {{ book.author }}
            </div>
            <div class="d-flex align-items-center">
                <em>City :&nbsp;</em>
                {{ book.city }}
            </div>
            <div class="d-flex align-items-center">
                <em>Editeur :&nbsp;</em>
                {{ book.editor }}
            </div>
            <div class="d-flex align-items-center">
                <em>Année :&nbsp;</em>
                {{ book.year|format_datetime(locale='fr',pattern="YYYY") }}
            </div>
            <div class="d-flex align-items-center">
                <em>Tome :&nbsp;</em>
                {{ book.quantity }}
            </div>
            <div class="d-flex align-items-center">
                <em>Pages :&nbsp;</em>
                {{ book.pages }}
            </div>
            <div class="d-flex align-items-center">
                <em>N° Prêt :&nbsp;</em>
                {{ book.rentNumber }}
            </div>
            <div class="d-flex align-items-center">
                <em>Nota :&nbsp;</em>
                {{ book.notice }}
            </div>
        </div>


        {% if is_granted('ROLE_ADMIN') %}
            {% if book is defined %}
                <div class="danger-zone">

                </div>
                <div class="d-flex justify-content-end my-4 py-2">
                    <a class="btn btn-vodou" href="{{ path('book_delete', {id:book.id}) }}" title="Supprimer" onclick="return confirm('Etes vous sûr de vouloir supprimer cet article ?')">
                        <i class="fa-solid fa-trash"></i>
                    </a>
                </div>
            {% endif %}
        {% endif %}



    </div>
{% endblock %}
