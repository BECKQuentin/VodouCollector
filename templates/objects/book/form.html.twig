<div id="objectsForm">
    {{ form_start(form) }}
    <div class="row">
        <div class="col-12">
            {{ form_row(form.libraries) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">{{ form_row(form.author) }}</div>
        <div class="no_arrow col-md-9">{{ form_row(form.title) }}</div>
    </div>
    <div class="row">
        <div class="col-md-2">{{ form_row(form.city) }}</div>
        <div class="no_arrow col-md-8">{{ form_row(form.editor) }}</div>
{#        {{ form_widget(form.year['day'],{'attr':{'style':'display:none'}}) }}#}
{#        {{ form_widget(form.year['month'],{'attr':{'style':'display:none'}}) }}#}
        <div class="col-md-2">{{ form_row(form.year) }}
</div>
    </div>
    <div class="row">
        <div class="col-md-2">{{ form_row(form.quantity) }}</div>
        <div class="no_arrow col-md-2">{{ form_row(form.pages) }}</div>
        <div class="no_arrow col-md-2">{{ form_row(form.rentNumber) }}</div>
    </div>
    <div class="row">
        <div class="col-md-12">{{ form_row(form.notice) }}</div>
    </div>
    <hr>
    <div class="row">
        {{ form_row(form.submit) }}
    </div>
    {{ form_end(form) }}


    {% if book is defined %}
        {% if is_granted('ROLE_ADMIN') %}
            {% if book is defined %}
                <div class="danger-zone">

                </div>
                <div class="d-flex justify-content-end my-4 py-2">
                    <a class="btn btn-vodou" href="{{ path('book_delete', {id:book.id}) }}" title="Supprimer" onclick="return confirm('Etes vous sÃ»r de vouloir supprimer cet article ?')">
                        <i class="fa-solid fa-trash"></i>
                    </a>
                </div>
            {% endif %}
        {% endif %}
    {% endif %}
</div>

