<div class="login d-flex align-items-center justify-content-between">
    <div class="login_notif mx-3">
        <a href="">
            <i class="fa-solid fa-bell"></i>
        </a>
    </div>
    <div class="user_profil d-flex align-items-center">
        {% if app.user %}
            <a class="nav-link p-0" href="{{ path('profil') }}" title="Mon profil">
                    <span href="" class="login_user_profil">
                        {{ app.user.firstname|capitalize|u.truncate(10, '...') }} {{ app.user.lastname|upper|u.truncate(10, '...') }}
                    </span>
            </a>
        {% endif %}
        <div class="login_dropdown dropdown show">
            <a class="btn dropdown-toggle shadow-none" href="#" role="button" id="loginDropdownLink" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <span><i class="fa-solid fa-ellipsis-vertical"></i></span>
            </a>
            <div class="dropdown-menu px-2" aria-labelledby="loginDropdownLink">
                <a href="{{ path('profil') }}" class="dropdown-item link_underline text-right">Profil<i class="fa-solid fa-user-gear px-2"></i></a>
                <div class="text-end dropdown-item disabled">{{ app.user.roles[0]|roles(app.user.roles) }}</div>
                <a href="{{ path('app_logout') }}" class="dropdown-item link_underline text-right">Se d√©connecter<i class="fa-solid fa-arrow-right-to-bracket px-2"></i></a>
            </div>
        </div>
    </div>

