<!DOCTYPE html>
<html>
{% set route_name = app.request.attributes.get('_route') %}
<head>
    <meta charset="UTF-8">
    <title>
        {% block title %}Vodou Collector{% endblock %}
    </title>

    {% block stylesheets %}
        {# Bootstrap #}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
        <!--Font-Famaily-->
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Ubuntu&display=swap" rel="stylesheet">
        <!--Font Awesome-->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
              integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <!--FAVICON-->
        <link rel="icon" type="image/png" href="{{ asset('fonts/icons/cropped-logo-musee-vodou.png') }}"/>
        <!--CSS-->
        <link rel="stylesheet" href="{{ asset('js/tagsinput/bootstrap-tagsinput.css') }}">
        <link rel="stylesheet" href="{{asset('css/base/style.css')}}">
        <link rel="stylesheet" href="{{asset('css/base/home.css')}}">
        <link rel="stylesheet" href="{{asset('css/base/toolbar.css')}}">
        <link rel="stylesheet" href="{{asset('css/objects/objects.css')}}">
        <link rel="stylesheet" href="{{asset('css/objects/tags.css')}}">
        <link rel="stylesheet" href="{{asset('css/objects/form.css')}}">
        <link rel="stylesheet" href="{{asset('css/objects/media.css')}}">
        <link rel="stylesheet" href="{{asset('css/search/search.css')}}">
        <link rel="stylesheet" href="{{asset('css/site/style.css')}}">
        <link rel="stylesheet" href="{{asset('css/bundles/captcha.css')}}">
        <!--Bundles-->


{#        <link rel="stylesheet" href="{{asset('styles/mediaQueries.styles')}}">#}
{#        <link rel="stylesheet" href="{{asset('styles/error.styles')}}">#}
    {% endblock %}





</head>

<body>

    {% if app.user %}
        <header>
        </header>
            <div class="d-flex">
                <div id="toolbar" class="col-2">
                    {% include 'base/tool/toolbar.html.twig'%}
                </div>
                <div id="page" class="offset-2 col-10">

                    <div class="d-flex">
                        <div class="col-9 m-0 p-0">
                            {% if app.request.get('_route') == 'objects' %}
                                {% include 'base/tool/search_item_toolbar.html.twig' %}
                            {% else %}
                                <a href="{{ path('objects') }}">
                                    <div id="search_item_toolbar_button" class="search form-group">
                                        <div class="form-control">Rechercher</div>
                                    </div>
                                </a>
                            {% endif %}
                        </div>
                        <div class="col-3 m-0 p-0">
                            {% include 'base/tool/login.html.twig' %}
                        </div>
                    </div>

                    <div class="mx-3">
                        {% include "base/flash.html.twig" %}
                    </div>

                    <div id="content">
                        {% block body %}


                        {% endblock %}
                    </div>
                </div>
            </div>
    {% else %}
        {% block login %}

        {% endblock %}
    {% endif %}



